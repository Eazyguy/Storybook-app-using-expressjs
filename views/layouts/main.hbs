       'alignment', '|',
       'link', 'blockQuote', 'insertTable', 'mediaEmbed', 'codeBlock', 'htmlEmbed', '|',
       'specialCharacters', 'horizontalLine', 'pageBreak', '|',
       'textPartLanguage', '|',
       'sourceEditing'
       ],
       shouldNotGroupWhenFull: true
