<div class="row">
    <div class="col s12 m12 l8">
        <h3>{{story.title}} <small>{{{editIcon story.user user story._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate story.createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{story.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m12 l4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{image StoryUser story.user}}" alt="{{story.user.firstName}}" class="circle responsive-img img-small">
                <span class="email" style="display: block;">{{story.user.email}}</span>
                <span class="phone" style="display: block;">{{story.user.Phone}}</span>
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}">More from {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>